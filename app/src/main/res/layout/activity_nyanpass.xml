<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NyanpassActivity"
    android:background="@drawable/back" >

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@drawable/gray_box_shape">

        <Button android:id="@+id/nyanpass_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/nyanpass_button"
            android:onClick="nyanpassButton"
            android:textColor="#796bae"
            android:textSize="30sp"
            android:background="@drawable/nyanpass_button_shape"/>

        <non.renge.nyanpass.OutlineTextView android:id="@+id/nyanpass_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_above="@id/nyanpass_button"
            android:textColor="#e75297"
            android:textSize="40sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="5.0" />
    </RelativeLayout>
</RelativeLayout>

